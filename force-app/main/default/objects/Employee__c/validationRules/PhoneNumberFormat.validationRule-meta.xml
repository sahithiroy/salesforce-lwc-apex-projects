<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>PhoneNumberFormat</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX(Mobile__c, &quot;^\\d{10}$&quot;))</errorConditionFormula>
    <errorMessage>Phone number must contain exactly 10 digits (no spaces or special characters).</errorMessage>
</ValidationRule>
