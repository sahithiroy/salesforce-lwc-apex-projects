<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Minimum_Description_Length</fullName>
    <active>true</active>
    <errorConditionFormula>LEN( Description__c)&lt;20</errorConditionFormula>
    <errorDisplayField>Description__c</errorDisplayField>
    <errorMessage>Description must be at least 20 characters long.</errorMessage>
</ValidationRule>
